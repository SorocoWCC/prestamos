<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <report 
            string="Abono Prestamo" 
            id="custom_report_abono" 
            model="abono" 
            report_type="qweb-pdf"
            name="prestamos.report_abono_document" 
            file="Abono Prestamo" 
        />

        <record id="paperformat_lowmargin_prestamos" model="report.paperformat">
            <field name="name">Abono Prestamo</field>
            <field name="default" eval="True" />
            <field name="format">custom</field>
            <field name="page_height">150</field>
            <field name="page_width">60</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">3</field>
            <field name="margin_bottom">3</field>
            <field name="margin_left">3</field>
            <field name="margin_right">3</field>
            <field name="header_line" eval="False" />
            <field name="header_spacing">0</field>
            <field name="dpi">90</field>
        </record>
        <record id="prestamos.custom_report_abono" model="ir.actions.report">
            <field name="paperformat_id" ref="prestamos.paperformat_lowmargin_prestamos" />
        </record>
    </data>
</openerp>