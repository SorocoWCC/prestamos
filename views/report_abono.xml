<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <template id="report_abono_document">
            <t t-as="o" t-foreach="docs">
                <t t-call="web.html_container">
                    <div class="page">
                        <style type="text/css">h4 {
                        font-weight:bold;
                    }

                    h5, h6 {
                        margin-top: 2px;
                        margin-bottom: 4px;
                        text-align: center;
                    }

                    .ticket-body {
                        overflow: hidden;
                    }

                    .ticket-container {
                        width: 240px;
                    }

                    .ticket-container .ticket-body table.ticket-header {
                        margin-top:20px;
                        width: 100%;
                    }

                    .ticket-container .ticket-body table.ticket-header td {
                        text-align: left;
                    }

                    .ticket-container .ticket-body table.product-table {
                        margin-top: 20px;
                        width: 100%;
                    }

                    .ticket-container .ticket-body table.product-table tr td:first-child {
                        text-align: left;
                    }

                    .ticket-container .ticket-body table.product-table tr td:last-child {
                        text-align: right;
                    }

                    .ticket-container .ticket-body .ticket-footer h4 {
                        margin-bottom: 0px;
                    }

                    .ticket-container .ticket-body .ticket-footer h4 {
                        font-weight: bold;
                    }</style>
                        <div class="row">
                            <div class="container ticket-container">
                                <div class="ticket-heading text-center">
                                    <h4 class="text-center" style="font-weight:bold;text-align:center">Recicladora San Miguel</h4>
                                    <h5>Teléfono: 2275-1833</h5>
                                    <h6>Sitio web:</h6>
                                    <h5>www.recicladorasanmiguel.com</h5>
                                </div>
                                <div class="ticket-body">
                                    <table class="ticket-header">
                                        <tr>
                                            <th class="text-center" colspan="2">Recibo de dinero</th>
                                        </tr>
                                        <tr>
                                            <td>Fecha:</td>
                                        </tr>
                                        <tr>
                                            <td colspan="2">
                                                <t t-esc="o.fecha"/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>Monto Prestamo:</td>
                                        </tr>
                                        <tr>
                                            <td colspan="2">₡ 
                                                <t t-esc="'{0:,.2f}'.format(int(o.prestamo_id.monto))"/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>Recibimos de:</td>
                                        </tr>
                                        <tr>
                                            <t t-if="o.prestamo_id.tipo == 'empleado'">
                                                <td>
                                                    <t t-esc="o.prestamo_id.empleado_id.name"/>
                                                </td>
                                            </t>
                                            <t t-if="o.prestamo_id.tipo == 'cliente'">
                                                <td>
                                                    <t t-esc="o.prestamo_id.cliente_id.name"/>
                                                </td>
                                            </t>
                                            <t t-if="o.prestamo_id.tipo == 'por_pagar'">
                                                <td>
                                                    Gerardo Castro Campos
                                                </td>
                                            </t>
                                        </tr>
                                        <tr>
                                            <td>La suma de:</td>
                                        </tr>
                                        <tr>
                                            <td colspan="2">₡ 
                                                <t t-esc="'{0:,.2f}'.format(int(o.monto))"/></td>
                                        </tr>
                                        <tr>
                                            <td colspan="2">Por concepto de: 
                                                <br/> Abono al préstamo
                                            </td>
                                        </tr>
                                    </table>
                                    <div class="ticket-footer text-center" style="font-weight:bold;text-align:center">
                                        <h4>Saldo: ₡ 
                                            <t t-esc="'{0:,.2f}'.format(int(o.saldo))"/></h4>
                                    </div>
                                    <div style="height: 50px; "/>
                                    <div style="text-align:center">________________ 
                                        <br/>
                                        Firma Cliente 
                                        <br/></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </template>
    </data>
</openerp>